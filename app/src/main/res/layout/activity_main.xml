<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.xiaoying.pagerindicator.PagerIndicator
        android:orientation="horizontal"
        android:id="@+id/vpi_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/vp_main"
        app:layout_constraintLeft_toLeftOf="@+id/vp_main"
        app:layout_constraintRight_toRightOf="@+id/vp_main"/>

</android.support.constraint.ConstraintLayout>